<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/helpTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="How the Quiz Works"
            android:textStyle="bold"
            android:textSize="22sp"
            android:importantForAccessibility="yes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- About -->
        <TextView
            android:id="@+id/sectionAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="About"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/helpTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="State Capitals Quiz tests your knowledge of U.S. state capitals. Each game contains 6 multiple-choice questions."
            android:layout_marginTop="6dp"
            android:lineHeight="20sp"
            app:layout_constraintTop_toBottomOf="@id/sectionAbout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Rules -->
        <TextView
            android:id="@+id/sectionRules"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rules"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textAbout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textRules"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:lineHeight="20sp"
            android:text="• 6 questions per quiz.\n• Each question shows 3 city choices.\n• Select exactly one answer using the radio buttons.\n• You can change your answer before finishing.\n• Score is shown after the final question."
            app:layout_constraintTop_toBottomOf="@id/sectionRules"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Navigation -->
        <TextView
            android:id="@+id/sectionNavigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Navigation"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textRules"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textNavigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="• Swipe left/right to move between questions.\n• The bottom bar shows “Question X of 6”.\n• On the last question, tap “Finish Quiz” to see your score."
            android:layout_marginTop="6dp"
            android:lineHeight="20sp"
            app:layout_constraintTop_toBottomOf="@id/sectionNavigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Saving & Resuming -->
        <TextView
            android:id="@+id/sectionSaving"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Saving &amp; Resuming"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textNavigation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textSaving"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="• If you leave the app or rotate the device, your current question and selections are preserved.\n• If the quiz is interrupted, you can resume from where you left off."
            android:layout_marginTop="6dp"
            android:lineHeight="20sp"
            app:layout_constraintTop_toBottomOf="@id/sectionSaving"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tips -->
        <TextView
            android:id="@+id/sectionTips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tips"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textSaving"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textTips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="• You can revisit any question before finishing.\n• If some questions are unanswered, the app will confirm before finishing.\n• On the Results screen, you can start a new quiz."
            android:layout_marginTop="6dp"
            android:lineHeight="20sp"
            app:layout_constraintTop_toBottomOf="@id/sectionTips"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Accessibility -->
        <TextView
            android:id="@+id/sectionA11y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Accessibility"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textTips"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textA11y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="• Questions and choices are labeled for screen readers.\n• Radio buttons support keyboard navigation.\n• Increase font size in system settings if needed."
            android:layout_marginTop="6dp"
            android:lineHeight="20sp"
            app:layout_constraintTop_toBottomOf="@id/sectionA11y"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Spacer -->
        <View
            android:id="@+id/bottomSpacer"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/textA11y"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
