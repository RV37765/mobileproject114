<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="edu.uga.cs.statecapitalsquiz.ui.SplashFragment"
        android:label="State Capitals Quiz">
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="edu.uga.cs.statecapitalsquiz.ui.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_home_to_quiz"
            app:destination="@id/quizContainerFragment"/>
        <action
            android:id="@+id/action_home_to_history"
            app:destination="@id/historyFragment"/>
        <action
            android:id="@+id/action_home_to_help"
            app:destination="@id/helpFragment"/>
    </fragment>

    <fragment
        android:id="@+id/quizContainerFragment"
        android:name="edu.uga.cs.statecapitalsquiz.ui.quiz.QuizContainerFragment"
        android:label="Quiz">
        <action
            android:id="@+id/action_quiz_to_results"
            app:destination="@id/resultsFragment" />
    </fragment>

    <fragment
        android:id="@+id/resultsFragment"
        android:name="edu.uga.cs.statecapitalsquiz.ui.ResultsFragment"
        android:label="Results">
        <action
            android:id="@+id/action_results_to_quizContainer"
            app:destination="@id/quizContainerFragment"/>
        <action
            android:id="@+id/action_results_to_history"
            app:destination="@id/historyFragment"/>
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="edu.uga.cs.statecapitalsquiz.ui.HistoryFragment"
        android:label="Past Results"/>

    <fragment
        android:id="@+id/helpFragment"
        android:name="edu.uga.cs.statecapitalsquiz.ui.HelpFragment"
        android:label="Help"/>
</navigation>
